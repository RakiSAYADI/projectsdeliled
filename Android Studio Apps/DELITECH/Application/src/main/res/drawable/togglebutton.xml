<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" >
        <shape  android:shape="rectangle"  >
            <corners android:radius="75dp" />
            <gradient android:centerColor="@color/Gray" android:startColor="@color/Gray" android:endColor="@color/Gray"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="75dp" />
            <gradient android:centerColor="@color/Orange_deliled" android:startColor="@color/Orange_deliled" android:endColor="@color/Orange_deliled"/>
        </shape>
    </item>
</selector>