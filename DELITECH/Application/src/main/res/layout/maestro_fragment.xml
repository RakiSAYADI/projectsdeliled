    </RelativeLayout>

    <View
    android:id="@+id/view"
    android:layout_width="350dp"
    android:layout_height="20dp" />

    <LinearLayout
        android:id="@+id/pair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/Chambre1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:background="@drawable/togglebutton"
                android:text="@string/ch1"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/Chambre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="12sp"
                android:background="@drawable/togglebutton"
                android:text="@string/ch2"
                android:textColor="@color/White" />

            <ToggleButton
                android:id="@+id/Chambre3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/togglebutton"
                android:text="@string/ch3"
                android:textColor="@color/White" />

            <ToggleButton
                android:id="@+id/Chambre4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/togglebutton"
                android:text="@string/ch4"
                android:textColor="@color/White" />

            <ToggleButton
                android:id="@+id/volt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/togglebutton"
                android:text="@string/ch4"
                android:textColor="@color/White" />
        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/couleur_fav1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top|center"
                        android:background="@drawable/buttonshape"
                        android:textColor="@color/White" />

                    <TextView
                        android:id="@+id/couleur_fav1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-45dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="Couleur1"
                        android:textColor="@color/White" />

                    <View
                        android:id="@+id/couleurfav1_view"
                        android:layout_width="70dp"
                        android:layout_height="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/couleur_fav2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonshape"
                        android:gravity="bottom|center"
                        android:textColor="@color/White" />
                    <TextView
                        android:id="@+id/couleur_fav2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-28dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="Couleur2"
                        android:textColor="@color/White" />

                    <View
                        android:id="@+id/couleurfav2_view"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="-43dp" />
                </LinearLayout>
            </LinearLayout>

            <com.skydoves.colorpickerview.ColorPickerView
                android:id="@+id/colorPickerView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:rotation="180"
                app:palette="@drawable/palette"
                app:selector="@drawable/wheel" />

            <Button
                android:id="@+id/modeexpert"
                android:layout_width="83dp"
                android:layout_height="151dp"
                android:layout_marginStart="12dp"
                android:visibility="gone"
                android:background="@drawable/buttonshapeconnect"
                android:gravity="center_horizontal"
                android:text="@string/exp"
                android:textColor="@color/White" />
        </LinearLayout>

