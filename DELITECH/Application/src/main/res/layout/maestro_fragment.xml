            android:thumb="@null" />

        <SeekBar
            android:id="@+id/saturation"
            android:layout_width="258dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/saturation"
            android:thumb="@null" />

        <SeekBar
            android:id="@+id/white"
            android:layout_width="258dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/blancs"
            android:thumb="@null" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">
            <Button
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@color/fbutton_color_transparent"
                android:drawableStart="@drawable/setting"
                android:text=" Réglages"
                android:textColor="@color/White" />
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_marginStart="12dp"
                android:background="@color/fbutton_color_transparent"
                android:contentDescription="@string/power"
                android:src="@drawable/onoff" />

            <ImageButton
                android:id="@+id/imageButton_off"
                android:layout_width="39dp"
                android:layout_marginStart="12dp"
                android:layout_height="37dp"
                android:background="@color/fbutton_color_transparent"
                android:contentDescription="@string/power"
                android:src="@drawable/close" />


            <Button
                android:id="@+id/profils"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
